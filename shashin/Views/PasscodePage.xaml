<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shashin.Views.PasscodePage">
    <ContentPage.Content>
        <StackLayout>
            <Label HeightRequest="300"/>
            <Label x:Name="FirstTimePasscode" Text="Enter a new Passcode for first time use:" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="EntryPasscode" Focused="EntryPasscode_Focused" Completed="EntryPasscode_Completed" PropertyChanged="EntryPasscode_PropertyChanged" Placeholder="Enter Passcode Here" Keyboard="Numeric" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>